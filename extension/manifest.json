{
  "manifest_version": 2,

  "name": "CSRF Nawt",
  "description": "Prevent your site from being CSRF attacked!",
  "version": "1.0",

  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["csrf_server.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_start",
      "js": ["csrf_defense.js"]
    }
  ]
}
