{
  "manifest_version": 2,

  "name": "CSRF Nawt",
  "description": "Prevent your site from being CSRF attacked!",
  "version": "1.0",

  "permissions": ["tabs"],
  "background": {
    "scripts": ["csrf_server.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_idle",
      "js": ["lib/jquery.js", "csrf_defense.js"]
    }
  ]
}
